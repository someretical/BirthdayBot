        "deploy-commands": "ts-node -r dotenv/config ./src/deploy-commands.ts -p",
        "dev": "nodemon",
        "start": "node -r dotenv/config .",
        "deploy": "pm2 start . --exp-backoff-restart-delay=100 --name=\"yummers\" --node-args=\"-r dotenv/config\""
    },
