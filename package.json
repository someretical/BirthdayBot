    "name": "BirthdayBot",
    "version": "0.0.1",
    "description": "Discord bot that celebrates server members' birthdays ðŸŽ‰",
    "main": "./build/index.js",
    "scripts": {
        "prisma-init": "npx prisma migrate dev --name init --schema=./src/prisma/schema.prisma",
        "test": "npx eslint . --ext .ts",
        "lint": "npx prettier --config .prettierrc --write .",
        "build": "npx tsc --build",
